<Window x:Class="Cyber_Espace_Entrainement.Views.Tests.MorseTestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Cyber_Espace_Entrainement.ViewModels.Tests"
        Title="Code Morse - Apprentissage et Test" 
        Height="800" 
        Width="1000"
        WindowStartupLocation="CenterScreen">

        <Window.DataContext>
            <vm:MorseViewModel/>
        </Window.DataContext>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ═══════════════════════════════════════════════════ -->
            <!-- EN-TÊTE -->
            <!-- ═══════════════════════════════════════════════════ -->
            <Border Grid.Row="0" Background="#673AB7" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Bouton Retour -->
                    <Button Grid.Column="0"
                        Content="↩️   Retour"
                        Click="BackButton_Click"
                        Background="#512DA8"
                        Foreground="White"
                        Padding="15,10"
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"/>

                    <!-- Titre -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="📡 CODE MORSE" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                        <TextBlock Text="Apprenez et testez vos connaissances en Morse" 
                               FontSize="14" 
                               Foreground="#E1BEE7" 
                               Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Score -->
                    <Border Grid.Column="2" 
                        Background="White" 
                        Padding="20,15" 
                        CornerRadius="8"
                        VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="SCORE" 
                                   FontSize="12" 
                                   Foreground="#666" 
                                   HorizontalAlignment="Center"
                                   FontWeight="Bold"/>
                            <TextBlock HorizontalAlignment="Center" FontSize="24" FontWeight="Bold">
                            <Run Text="{Binding Score}" Foreground="#4CAF50"/>
                            <Run Text="/" Foreground="#666"/>
                            <Run Text="{Binding TotalQuestions}" Foreground="#666"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- ═══════════════════════════════════════════════════ -->
            <!-- CONTENU PRINCIPAL -->
            <!-- ═══════════════════════════════════════════════════ -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ════════════════════════════════════════════ -->
                <!-- COLONNE GAUCHE : Tableau des codes Morse -->
                <!-- ════════════════════════════════════════════ -->
                <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#ddd" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,20,0">
					<Border.Style>
						<Style TargetType="Border">
							<Setter Property="Visibility" Value="Visible"/>
							<Style.Triggers>
								<DataTrigger Binding="{Binding ModeTest}" Value="True">
									<Setter Property="Visibility" Value="Collapsed"/>
								</DataTrigger>
							</Style.Triggers>
						</Style>
					</Border.Style>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                               Text="📋 Tableau de Référence" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                        <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ListeMorse}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="#F5F5F5"
                              RowHeight="40"
                              FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Lettre" 
                                                Binding="{Binding Lettre}" 
                                                Width="80"
                                                FontWeight="Bold"
                                                FontSize="18">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#673AB7"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Code Morse" 
                                                Binding="{Binding CodeVisuel}" 
                                                Width="*"
                                                FontSize="20"
                                                FontFamily="Consolas">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#333"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- ════════════════════════════════════════════ -->
                <!-- COLONNE DROITE : Zone de test -->
                <!-- ════════════════════════════════════════════ -->
                <Border Grid.Column="1" 
                    Background="White" 
                    BorderBrush="#ddd" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Padding="30">
                    <StackPanel VerticalAlignment="Center">

                        <!-- Boutons Mode -->
                        <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,0,0,40">
                            <Button Content="📋 Visualiser le tableau" 
                                Command="{Binding AfficherTableauCommand}"
                                Background="#2196F3"
                                Foreground="White"
                                Padding="20,15"
                                FontSize="16"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Margin="0,0,10,0"
                                Cursor="Hand"/>

                            <Button Content="🎯 Tester vos connaissances" 
                                Command="{Binding CommencerTestCommand}"
                                Background="#4CAF50"
                                Foreground="White"
                                Padding="20,15"
                                FontSize="16"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand"/>
                        </StackPanel>

                        <!-- Zone de test (visible seulement en mode test) -->
                        <StackPanel>
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ModeTest}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <!-- Question -->
                            <TextBlock Text="{Binding QuestionPosee}" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,30"/>

                            <!-- Bouton Écouter le son -->
                            <Button Command="{Binding JouerSonCommand}"
                                Width="150"
                                Height="150"
                                Background="#673AB7"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,0,30"
                                HorizontalAlignment="Center">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="75">
                                                        <StackPanel VerticalAlignment="Center">
                                                            <TextBlock Text="🔊" 
                                                                   FontSize="60" 
                                                                   HorizontalAlignment="Center"/>
                                                            <TextBlock Text="ÉCOUTER" 
                                                                   FontSize="16" 
                                                                   FontWeight="Bold"
                                                                   Foreground="White"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,10,0,0"/>
                                                        </StackPanel>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#512DA8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Zone de réponse -->
                            <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,30">
                                <TextBlock Text="Votre réponse : " 
                                       FontSize="18" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"/>
                                <TextBox Text="{Binding ReponseUtilisateur, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="80"
                                     Height="50"
                                     FontSize="28"
                                     FontWeight="Bold"
                                     TextAlignment="Center"
                                     MaxLength="1"
                                     CharacterCasing="Upper"
                                     BorderBrush="#673AB7"
                                     BorderThickness="3">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" Command="{Binding ValiderReponseCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                                <Button Content="✓" 
                                    Command="{Binding ValiderReponseCommand, UpdateSourceTrigger=PropertyChanged}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Width="50"
                                    Height="50"
                                    FontSize="24"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Margin="15,0,0,0"
                                    ToolTip="Valider (ou appuyez sur Entrée)"/>
                            </StackPanel>

                            <!-- Bouton Réinitialiser -->
                            <Button Content="🔄 Recommencer" 
                                Command="{Binding ReinitialiserCommand}"
                                Background="#FF9800"
                                Foreground="White"
                                Padding="15,10"
                                FontSize="14"
                                BorderThickness="0"
                                Cursor="Hand"
                                HorizontalAlignment="Center"/>
                        </StackPanel>

                    </StackPanel>
                </Border>
            </Grid>

            <!-- ═══════════════════════════════════════════════════ -->
            <!-- BARRE DE STATUT -->
            <!-- ═══════════════════════════════════════════════════ -->
            <Border Grid.Row="2" Padding="20">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{Binding CouleurResultat}"/>
                    </Style>
                </Border.Style>
                <TextBlock Text="{Binding MessageResultat}" 
                       Foreground="White" 
                       FontWeight="Bold"
                       FontSize="16"
                       TextWrapping="Wrap"/>
            </Border>
        </Grid>
    </Window>
